name: Nightly Backup
on:
  schedule:
    - cron: "0 2 * * 1"  # luned√¨ 02:00 UTC
  workflow_dispatch:

jobs:
  bundle:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0
      - name: Create git bundle
        run: |
          git bundle create backup-$(date +%F).bundle --all
      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: repo-bundle-$(date +%F)
          path: backup-*.bundle
